@model SistemaTienda.Models.ViewModels.PagoVM

@{
    ViewData["Title"] = "Crear Pago";
}
<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    .font-title {
        font-family: 'Bebas Neue', sans-serif;
        letter-spacing: 1px;
    }

    .form-container {
        background-color: #f9f9f9;
        border-radius: 1rem;
        padding: 2rem;
        max-width: 800px;
        margin: auto;
        box-shadow: 0 0 15px rgba(0,0,0,0.07);
    }

    .form-label {
        font-weight: 600;
        color: #333;
    }

    .form-control {
        border-radius: 0.5rem !important;
        height: 38px;
    }

    .btn-dark {
        font-weight: 500;
        padding: 10px 25px;
    }
</style>

<div class="container mt-5">
    <h1 class="text-center display-4 text-black font-title mb-4">Crear Pago</h1>

    <form asp-area="Empleado"
          asp-controller="EmpleadoPagos"
          asp-action="Create"
          method="post">
        <div class="form-container">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Pago.RentaId" class="form-label">Renta</label>
                @Html.DropDownListFor(m => m.Pago.RentaId,
                         Model.ListaRentas,
                         "Seleccione una renta",
                         new { @class = "form-control" })
                <span asp-validation-for="Pago.RentaId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Pago.Monto" class="form-label">Monto</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input asp-for="Pago.Monto" class="form-control" readonly />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Pago.Estado" class="form-label">Estado</label>
                <select asp-for="Pago.Estado" class="form-control">
                    <option value="Pendiente">Pendiente</option>
                    <option value="Completado">Completado</option>
                </select>
            </div>

            <div class="mb-4">
                <label asp-for="Pago.Notas" class="form-label">Notas</label>
                <textarea asp-for="Pago.Notas" class="form-control" rows="3"></textarea>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-area="Empleado" asp-controller="EmpleadoPagos" asp-action="Index"
                   class="btn btn-secondary">
                    <i class="fas fa-times me-1"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-dark">
                    <i class="fas fa-save me-2"></i> Guardar Pago
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
