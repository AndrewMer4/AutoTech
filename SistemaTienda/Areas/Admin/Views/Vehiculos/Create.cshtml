@model SistemaTienda.Models.Vehiculo

@{
    ViewData["Title"] = "Crear Vehículo";
}

<!-- Fuente tipo cartel -->
<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
<!-- Font Awesome para íconos -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    .font-title {
        font-family: 'Bebas Neue', sans-serif;
        letter-spacing: 1px;
    }

    .form-container {
        background-color: #f9f9f9;
        border-radius: 1rem;
        padding: 2rem;
        max-width: 800px;
        margin: auto;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.07);
    }

    .form-label {
        font-weight: 600;
        color: #333;
    }

    .form-control {
        border-radius: 0.5rem;
    }

    .btn-dark {
        font-weight: 500;
        padding: 10px 25px;
        background-color: #343a40;
        border-color: #343a40;
    }

        .btn-dark:hover {
            background-color: #23272b;
            border-color: #1d2124;
        }
</style>

<div class="container mt-5">
    <h1 class="text-center display-4 text-black font-title mb-4">Crear Vehículo</h1>

    <form asp-area="Admin"
          asp-controller="Vehiculos"
          asp-action="Create"
          method="post"
          enctype="multipart/form-data">

        @Html.AntiForgeryToken()
        <div class="form-container">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Placa -->
            <div class="mb-3">
                <label asp-for="Placa" class="form-label"></label>
                <input asp-for="Placa" class="form-control" placeholder="A 123 456" />
                <span asp-validation-for="Placa" class="text-danger"></span>
            </div>

            <!-- Marca -->
            <div class="mb-3">
                <label asp-for="Marca" class="form-label"></label>
                <input asp-for="Marca" class="form-control" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>

            <!-- Modelo -->
            <div class="mb-3">
                <label asp-for="Modelo" class="form-label"></label>
                <input asp-for="Modelo" class="form-control" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>

            <!-- Año -->
            <div class="mb-3">
                <label asp-for="Anio" class="form-label"></label>
                <input asp-for="Anio" type="number" class="form-control" />
                <span asp-validation-for="Anio" class="text-danger"></span>
            </div>

            <!-- Kilometraje -->
            <div class="mb-3">
                <label asp-for="Kilometraje" class="form-label">Kilometraje</label>
                <input asp-for="Kilometraje" type="number" class="form-control" />
                <span asp-validation-for="Kilometraje" class="text-danger"></span>
            </div>

            <!-- Precio por Día -->
            <div class="mb-3">
                <label asp-for="PrecioPorDia" class="form-label">Precio / Día</label>
                <input asp-for="PrecioPorDia" class="form-control" placeholder="Ej: 55.50 o 55,50" />
                <span asp-validation-for="PrecioPorDia" class="text-danger"></span>
            </div>

            <!-- Estado -->
            <div class="mb-3">
                <label asp-for="Estado" class="form-label"></label>
                <select asp-for="Estado" class="form-control">
                    <option value="Disponible">Disponible</option>
                    <option value="En Mantenimiento">En Mantenimiento</option>
                    <option value="Rentado">Rentado</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <!-- Imagen -->
            <div class="mb-4">
                <label asp-for="UrlImagen" class="form-label">Imagen del Vehículo</label>
                <input type="file" name="archivos" class="form-control" />
                <span asp-validation-for="UrlImagen" class="text-danger"></span>
            </div>

            <!-- Botones -->
            <div class="d-flex justify-content-between">
                <a asp-area="Admin" asp-controller="Vehiculos" asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Volver
                </a>
                <button type="submit" class="btn btn-dark">
                    <i class="fas fa-plus me-2"></i> Crear
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelector('form').addEventListener('submit', function () {
            const p = document.querySelector("[name='PrecioPorDia']");
            if (p) p.value = p.value.replace(',', '.');
        });
    </script>
}