@model SistemaTienda.Models.ViewModels.RentaVM

@{
    ViewData["Title"] = "Editar Renta";
    var hoy = DateTime.Now.ToString("yyyy-MM-dd");
    var manana = DateTime.Now.AddDays(1).ToString("yyyy-MM-dd");
}

<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
<style>
    .font-title {
        font-family: 'Bebas Neue',sans-serif;
        letter-spacing: 1px;
    }

    .form-container {
        background: #f9f9f9;
        border-radius: 1rem;
        padding: 2rem;
        max-width: 750px;
        margin: auto;
        box-shadow: 0 0 15px rgba(0,0,0,0.07);
    }

    .form-label {
        font-weight: 600;
        color: #333;
    }

    .form-control {
        border-radius: 0.5rem;
    }

    .btn-dark {
        font-weight: 500;
        padding: 10px 25px;
    }
</style>

<div class="container mt-5">
    <h1 class="text-center display-4">Editar Renta</h1>
    <form asp-action="Edit" asp-area="Admin" method="post">
        <input type="hidden" asp-for="Renta.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label for="ClienteSearch">Cliente</label>
            <input type="text" id="ClienteSearch" name="ClienteSearch" class="form-control"
                   value="@Model.ClienteSearch" />
            <input type="hidden" asp-for="Renta.ClienteId" id="ClienteId" />
            <span asp-validation-for="Renta.ClienteId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="VehiculoSearch">Vehículo</label>
            <input type="text" id="VehiculoSearch" name="VehiculoSearch" class="form-control"
                   value="@Model.VehiculoSearch" />
            <input type="hidden" asp-for="Renta.VehiculoId" id="VehiculoId" />
            <span asp-validation-for="Renta.VehiculoId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Renta.FechaInicio"></label>
            <input asp-for="Renta.FechaInicio" type="date" class="form-control" readonly />
            <span asp-validation-for="Renta.FechaInicio" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Renta.FechaFin"></label>
            <input asp-for="Renta.FechaFin" type="date" class="form-control" min="@manana" />
            <span asp-validation-for="Renta.FechaFin" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Renta.Total"></label>
            <input asp-for="Renta.Total" class="form-control" readonly />
        </div>

        <button type="submit" class="btn btn-dark">Guardar</button>
        <a asp-action="Index" asp-area="Admin" class="btn btn-secondary">Cancelar</a>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/Admin/renta.js"></script>
}